<UserControl x:Class="AcademyManager.Views.Noti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:AcademyManager.AdminViews"
        mc:Ignorable="d"
        x:Name="adminWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:adminviewmodels="clr-namespace:AcademyManager.AdminViewmodels" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Height="600" Width="1000">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="40">
                            <Border.Effect>
                                <DropShadowEffect 
                                    Opacity="0.5" 
                                    Direction="300" 
                                    ShadowDepth="15" 
                                    BlurRadius="50"/>
                            </Border.Effect>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#15BF5C"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="False">
                                            <Setter Property="Background" Value="#027324"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="Link">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="ForestGreen"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="TextDecorations" Value="None"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ButtonBorder" CornerRadius="10">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="ForestGreen"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="False">
                                            <Setter Property="Background" Value="#FF3C783C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#027324"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border CornerRadius="0 30 30 0"
                Background="White"
                Margin="0,21,40,0" Height="40" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect 
                Opacity="0.5" 
                Direction="300" 
                ShadowDepth="15" 
                BlurRadius="50"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left">
                <TextBlock 
            Foreground="Black"
            Style="{StaticResource Link}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20" 
            RenderTransformOrigin="0.5,0.5"
            Margin="20 0 20 0">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseLeftButtonDown">
            <i:InvokeCommandAction Command="{Binding DownloadCommand}"
                                   CommandParameter="{Binding ElementName=TypeSelectionBox}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    Trang chủ >
                </TextBlock>
                <TextBlock Foreground="Black" Style="{StaticResource Link}"
           VerticalAlignment="Center"
           FontSize="20"
           RenderTransformOrigin="0.5,0.5"
           Margin="-10,0,0,0" Width="167">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding DownloadCommand}"
                                  CommandParameter="{Binding ElementName=TypeSelectionBox}"></i:InvokeCommandAction>
            </i:EventTrigger>
    </i:Interaction.Triggers>
                Thông tin cá nhân
                </TextBlock>
            </StackPanel>
        </Border>
        <Button 
            Background="ForestGreen" Cursor="Hand"
            FontSize="20" 
            Foreground="White"
            Command="{Binding UploadCommand}" 
            RenderTransformOrigin="0.5,0.5" Margin="540,520,340,30" Height="50">
            Quay lại
        </Button>
        <Button 
            Background="ForestGreen" Cursor="Hand"
            FontSize="20" 
            Foreground="White"
            Command="{Binding UploadCommand}" 
            RenderTransformOrigin="0.5,0.5" Margin="340,520,470,30" Height="50">
            Đánh dấu đã đọc
        </Button>

        <Border Margin="200,360,200,120" CornerRadius="40" Height="120" Width="600">
            <Border.Background>
                <SolidColorBrush Color="#FFE6FFEC" Opacity="0.9"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect 
                        Opacity="0.5" 
                        Direction="300" 
                        ShadowDepth="15" 
                        BlurRadius="50"/>
            </Border.Effect>
            <TextBlock Margin="10,70,0,0" FontSize="30" Width="500">
                    LẬP TRÌNH NÂNG CAO
            </TextBlock>
        </Border>
        <Border Margin="180,295,180,185" CornerRadius="40" Height="120" Width="640">
            <Border.Background>
                <SolidColorBrush Color="#FFE6FFEC" Opacity="0.9"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect 
            Opacity="0.5" 
            Direction="300" 
            ShadowDepth="15" 
            BlurRadius="50"/>
            </Border.Effect>
            <TextBlock Margin="10,70,0,0" FontSize="30" Width="500">
        LẬP TRÌNH NÂNG CAO
            </TextBlock>
        </Border>
        <Border Margin="160,230,160,250" CornerRadius="40" Height="120" Width="680">
            <Border.Background>
                <SolidColorBrush Color="#FFE6FFEC" Opacity="0.9"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect 
    Opacity="0.5" 
    Direction="300" 
    ShadowDepth="15" 
    BlurRadius="50"/>
            </Border.Effect>
            <TextBlock Margin="10,70,0,0" FontSize="30" Width="500">
LẬP TRÌNH NÂNG CAO
            </TextBlock>
        </Border>
        <Border Margin="140,165,140,315" CornerRadius="40" Height="120" Width="720">
            <Border.Background>
                <SolidColorBrush Color="#FFE6FFEC" Opacity="0.9"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect 
    Opacity="0.5" 
    Direction="300" 
    ShadowDepth="15" 
    BlurRadius="50"/>
            </Border.Effect>
            <TextBlock Margin="10,70,0,0" FontSize="30" Width="500">
LẬP TRÌNH NÂNG CAO
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
