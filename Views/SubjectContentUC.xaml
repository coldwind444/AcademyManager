<UserControl x:Class="AcademyManager.Views.SubjectContentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcademyManager.UserControls"
             xmlns:vm="clr-namespace:AcademyManager.Viewmodels"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="880">
    <UserControl.DataContext>
        <vm:CourseInfoVM></vm:CourseInfoVM>
    </UserControl.DataContext>
    <Border Margin="30,0,30,0"
            CornerRadius="20" 
            Opacity="0.8" Height="40">
        <Border.Background>
            <SolidColorBrush Color="#FFE6FFEC" 
                             Opacity="0.9"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Opacity="0.5" 
                              Direction="300"
                              ShadowDepth="15"
                              BlurRadius="50"/>
        </Border.Effect>
        <TextBlock FontSize="20" 
                   Margin="20" 
                   Text="Content" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left"/>
    </Border>
</UserControl>