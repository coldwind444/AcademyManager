<UserControl x:Class="AcademyManager.Views.ForgetPass2"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
     xmlns:uc="clr-namespace:AcademyManager.UCViews"
     mc:Ignorable="d" 
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:adminviewmodels="clr-namespace:AcademyManager.AdminViewmodels" 
     d:DataContext="{d:DesignInstance Type=UserControl}"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     FontFamily="{DynamicResource MaterialDesignFont}"
     d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="Link">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="ForestGreen"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="TextDecorations" Value="None"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#027324"/>
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="False">
                                            <Setter Property="Background" Value="#027324"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter VerticalAlignment="Center"
                                      HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid >
        <materialDesign:PackIcon Foreground="#FF7CAC7E" Kind="Clover" Height="1196" Width="1507" Margin="355,-324,-500,0" Opacity="0.5">
            <materialDesign:PackIcon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="16.75"/>
                    <TranslateTransform/>
                </TransformGroup>
            </materialDesign:PackIcon.RenderTransform>
        </materialDesign:PackIcon>
        <materialDesign:PackIcon Foreground="#FF7CAC7E" Kind="Clover" Height="558" Margin="-280,-200,0,0" Width="786" RenderTransformOrigin="0.5,0.5" Opacity="0.5" >
            <materialDesign:PackIcon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="16.75"/>
                    <TranslateTransform/>
                </TransformGroup>
            </materialDesign:PackIcon.RenderTransform>
        </materialDesign:PackIcon>
        <Border Width="400"
                BorderThickness="1.5"
                BorderBrush="Black" 
                CornerRadius="10" 
                Margin="300,170,300,170">
            <Border.Background>
                <SolidColorBrush Color="#FFE6FFEC" Opacity="0.9"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect 
                    Opacity="0.5" 
                    Direction="300" 
                    ShadowDepth="15" 
                    BlurRadius="50"/>
            </Border.Effect>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button Command="{Binding LoginCommand}"
                         Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="CloseBox" Foreground="ForestGreen" Width="35" Height="35" Margin="-40,-20,0,0"/>
                </Button>
                <TextBlock Style="{StaticResource Link}"
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    FontSize="30" 
                    Height="50"><i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding DownloadCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers><Run Language="vi-vn" Text="QUÊN MẬT KHẨU"/></TextBlock>
                <Border Width="350" Height="40"
                        Background="White"
                        CornerRadius="20"
                        Margin="0 0 0 10"
                        BorderBrush="Black"
                        BorderThickness="1.5">
                    <TextBox Width="320" Height="30"
                             materialDesign:HintAssist.Hint="UserName"
                             Text="{Binding Path}"
                             x:Name="FilePathBox"
                             BorderThickness="0"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             FontSize="16" VerticalContentAlignment="Center"/>
                </Border>
                <Border Width="350" 
                        Height="40"
                        Background="White"
                        CornerRadius="20"
                        Margin="0 0 0 10"
                        BorderBrush="Black"
                        BorderThickness="1.5">
                    <TextBox Width="320" 
                             Height="30"
                             materialDesign:HintAssist.Hint="Mã xác nhận"
                             Text="{Binding Path}"
                             x:Name="FilePathBox2"
                             BorderThickness="0"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             FontSize="16" VerticalContentAlignment="Center"/>
                </Border>
                <Border Width="100" CornerRadius="20">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.9"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Opacity="0.5"
                                          Direction="300"
                                          ShadowDepth="15"
                                          BlurRadius="50"/>
                    </Border.Effect>
                    <Button Height="40" 
                            Width="100" 
                            Cursor="Hand"
                            FontSize="16" 
                            Foreground="White"
                            Command="{Binding SetNewPassCommand}"  
                            Content="Xác nhận"/>
                    <!-- Command="{Binding UploadCommand}"-->
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>